<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous" />

  <link rel="stylesheet" href="/styles/nav.scss" />
  <link rel="stylesheet" href="/styles/main.scss" />
  <title>User Login</title>
</head>

<body>
  <%- include('partials/_header') %>
    <div>
      <h2 class="ml-3 mt-3"><b>Login</b></h2>
      <form method="POST" action="/login">
        <div>
          <div>
            <label class="ml-3" for="email">Email address:</label>
          </div>
          <div>
            <input
              class="ml-3"
              name="email"
              type="email"
              placeholder="Email"
              style="width:250px"
            />
          </div>
          <div>
            <label class="ml-3 mt-3" for="password">Password:</label>
          </div>
          <div>
            <input
              class="ml-3"
              name="password"
              type="password"
              placeholder="Password"
              style="width:250px"
            />
          </div>
        </div>
        <button type="submit" class="btn btn-primary btn-sm ml-3 mt-3">Login</button>
      </form>
    </div>
    <div>
      <h2 class="ml-3 mt-5"><b>Register Account</b></h2>
      <form method="POST" action="/register">
        <div>
          <div>
            <label class="ml-3 mt-3" for="full-name">Full Name:</label>
          </div>
          <div>
            <input
              class="ml-3"
              name="fullName"
              type="full-name"
              placeholder="FirstName LastName"
              style="width:250px"
            />
          </div>
          <div>
            <label class="ml-3" for="username">Username:</label>
          </div>
          <div>
            <input
              class="ml-3"
              name="username"
              type="username"
              placeholder="Username"
              style="width:250px"
            />
          </div>
          <div>
            <label class="ml-3" for="email">Email address:</label>
          </div>
          <div>
            <input
              class="ml-3"
              name="email"
              type="email"
              placeholder="email@litebay.org"
              style="width:250px"
            />
          </div>
          <div>
            <label class="ml-3 mt-3" for="password">Password:</label>
          </div>
          <div>
            <input
              class="ml-3"
              name="password"
              type="password"
              placeholder="********"
              style="width:250px"
            />
          </div>
        </div>
        <button type="submit" class="btn btn-primary btn-sm ml-3 mt-3">Register</button>
      </form>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"></script>
</body>

</html>
